        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
  </head>
   <body>
   <div class="container-scroller">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="index.html">Dashboard</a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
<div class="nav">
                            <div class="sb-sidenav-menu-heading">Core</div>
                             {# <a class="nav-link" href="{{ path('dashboard') }}"> #}
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>
                            <div class="sb-sidenav-menu-heading">Actions</div>
                            <!-- Produit Ajouter Link -->
                           <a class="nav-link" href="{{ path('app_produit_ajouter') }}">
                                <div class="sb-nav-link-icon"><i class="fas fa-plus-square"></i></div>
                                Ajouter Produit
                            </a>
                            <!-- Categorie Ajouter Link -->
                            <a class="nav-link" href="{{ path('app_categorie_ajouter') }}">
                                <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                                Ajouter Catégorie
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
           <div id="layoutSidenav_content">
        <main>
          <div class="content-wrapper">
          <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Ajouter Produit</h4>
                    <p class="card-description"></p>
                   {% block body %}
                   
                   {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
                   <div class="form-group" >
                   {{ form_label(form.nomproduit, 'Nom de produit', {'attr': {'class': 'form-control-label'}}) }}
                   {{ form_widget(form.nomproduit, {'attr': {'class': 'form-control', 'placeholder': 'Nom de produit'}}) }}
                   </div>
                   <div class="form-group" >
                   {{ form_label(form.categorie, 'categorie', {'attr': {'class': 'form-control-label'}}) }}
                   {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'placeholder': 'categorie'}}) }}
                   </div>
                   <div class="form-group" >
                   {{ form_label(form.prix, 'Prix', {'attr': {'class': 'form-control-label'}}) }}
                   {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix'}}) }}
                   </div>
                   <div class="form-group" >
                   {{ form_label(form.quantite, 'Quantite', {'attr': {'class': 'form-control-label'}}) }}
                   {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder': 'Quantite'}}) }}
                   </div>
                   <div class="form-group">
                   {{ form_label(form.imageproduit, 'Image', {'attr': {'class': 'form-control-label'}}) }}
                   {{ form_widget(form.imageproduit, {'attr': {'class': 'form-control'}}) }}
                   </div>
                   <button type="submit" class="btn btn-primary">Modifier</button>
                   {{ form_end(form) }}
                   {% endblock %}
                  </div>
                </div>
              </div>
          </div>
          </main>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
              <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates</a> from Bootstrapdash.com</span>
            </div>
          </footer>
          {# <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
