<style>
    .review-container {
        max-width: 600px;
        margin: 100px auto; /* Increase the top margin to move it further down */
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: relative; /* Add position relative for the animation */
        overflow: hidden; /* Hide overflow to prevent scrollbars */
    }

    .review-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(-45deg, #ffbf00, #007bff, #ffbf00, #007bff); /* Gradient colors */
        background-size: 400% 400%; /* Larger background size for animation */
        z-index: -1; /* Behind the content */
        animation: animateGradient 10s ease infinite; /* Animation properties */
    }

    @keyframes animateGradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .review-container h1 {
        color: #333;
        text-align: center;
    }

    
    .review-form textarea {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-bottom: 20px;
        resize: none;
    }

    .review-form button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .review-form button:hover {
        background-color: #0056b3;
    }

    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .header-section { /* Ensure header is at the top */
        position: relative;
        z-index: 1;
        background-color: black; /* Add black background color */
        color: white; /* Add white text color */
    }
    .footer-section { /* Ensure footer is at the bottom */
        position: relative;
        z-index: 1;
        margin-top: auto;
