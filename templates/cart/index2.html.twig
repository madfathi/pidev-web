<section class="class-timetable-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Your Cart Items</span>
                    <h2>Review Your Cart</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="class-timetable">
                    <table class="cart-table" style="width: 100%; background: #282828; color: white; border-radius: 8px; overflow: hidden;">
                        <thead class="cart-table-head">
                            <tr class="table-head-row" style="background: #404040; padding: 12px 15px;">
                            
                                <th class="product-name">Name</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-total">Total</th>
                            </tr>
                        </thead>
                        <tbody style="background: #303030;">
                            {% for elements in cart %}
                            <tr>
                                
                                <td class="product-name">{{ elements.name }}</td>
                                <td class="product-price">{{ elements.price }} DT</td>
                                <td class="product-quantity">
                               <form method="post" action="{{ path ('cart_remove', {'id': elements.id}) }}" style="display: inline;">
        <input type="hidden" name="_method" value="DELETE"> {# Utilisez DELETE pour la suppression #}
        <button type="submit" class="btn btn-danger">-</button>
    </form>
    {{  elements.quantity }}
    
    <form method="post" action="{{ path ('cart_add', {'id': elements.id}) }}" style="display: inline;">
        <input type="hidden" name="_method" value="PUT"> {# Utilisez PUT pour l'ajout #}
        <button type="submit" class="btn btn-success">+</button>
    </form>
                                </td>
                                <td class="product-total">{{ elements.total }}</td>
                            </tr> 
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Your cart is empty</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="cart-buttons">
                    <a href="{{ path('cart_clear') }}" class="boxed-btn">Clear Cart</a>
                    <a href="{{ path('app_produit_front') }}" class="boxed-btn">Continue Shopping</a>
                </div>
                <div class="total-section">
                    <table class="total-table" style="width: 100%; background: #282828; color: white; border-radius: 8px; overflow: hidden;">
                        <thead class="total-table-head">
                            <tr class="table-total-row" style="background: #404040; padding: 12px 15px;">
                                <th>Total</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody style="background: #303030;">
                            <tr class="total-data" style="padding: 10px 15px;">
                                <td><strong>Total:</strong></td>
                                <td>{{ app.session.get('totalCart') }} DT</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('create_order') }}" class="boxed-btn black" style="display: block; width: 100%; text-align: center; background: #222; color: white; padding: 12px 20px; margin-top: 15px; border-radius: 4px; text-transform: uppercase; font-weight: bold;">Check Out</a>
                </div>
            </div>
        </div>
    </div>
