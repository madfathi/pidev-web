	<div class="cart-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									
									<th class="product-name">Name</th>
									<th class="product-price">Price</th>
									<th class="product-quantity">Quantity</th>
									<th class="product-total">Total</th>
                                    
								</tr>
							</thead>
							<tbody>
								 {% for elements in cart %}
                <tr>
                <td></td>
                    <td>{{ elements.name }}</td>
                    <td class="text-end">{{ elements.price }} DT</td>
                    <td><form method="post" action="{{ path ('cart_remove', {'id': elements.id}) }}" style="display: inline;">
        <input type="hidden" name="_method" value="DELETE"> {# Utilisez DELETE pour la suppression #}
        <button type="submit" class="btn btn-danger">-</button>
    </form>
    {{  elements.quantity }}
    
    <form method="post" action="{{ path ('cart_add', {'id': elements.id}) }}" style="display: inline;">
        <input type="hidden" name="_method" value="PUT"> {# Utilisez PUT pour l'ajout #}
        <button type="submit" class="btn btn-success">+</button>
    </form> </td>
                    <td>{{  elements.total }}</td>
                    
                  
                   
                   
                    
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
							
							</tbody>
						</table>
                        <div class="cart-buttons">
							
							
							<a  href="{{ path ('cart_clear') }}" class="boxed-btn black">Vider le panier</a>
							<a href="{{ path ('app_produit') }}" class="boxed-btn black">Continuer a shoper </a>
						</div>
						
					</div>
				</div>

				<div class="col-lg-4">
					<div class="total-section">
						<table class="total-table">
							<thead class="total-table-head">
								<tr class="table-total-row">
									<th>Total</th>
									<th>Price</th>
								</tr>
							</thead>
							<tbody>
								
								
								<tr class="total-data">
									<td><strong>Total: </strong></td>
									  <td> {{ app.session.get('totalCart') }}</td>
								</tr>
							</tbody>
						</table>
                        
