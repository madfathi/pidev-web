{% extends '/frontOffice/base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Register</h1>
    {{ form_start(registrationForm) }}
    {% if form_errors(registrationForm.email) or form_errors(registrationForm.mdp) or form_errors(registrationForm.role) or form_errors(registrationForm.nom) or form_errors(registrationForm.prenom) %}
        <div class="alert alert-danger">
            <ul>
                {% if  form_errors(registrationForm.email) %}
                    <li>{{ form_errors(registrationForm.email) }}</li>
                {% endif %}
                {% if  form_errors(registrationForm.mdp) %}
                    <li>{{ form_errors(registrationForm.mdp) }}</li>
                {% endif %}
                {% if  form_errors(registrationForm.role) %}
                    <li>{{ form_errors(registrationForm.role) }}</li>
                {% endif %}
                {% if  form_errors(registrationForm.nom) %}
                    <li>{{ form_errors(registrationForm.nom) }}</li>
                {% endif %}
                {% if  form_errors(registrationForm.prenom) %}
                    <li>{{ form_errors(registrationForm.prenom) }}</li>
                {% endif %}
                {% if  form_errors(registrationForm.username) %}
                    <li>{{ form_errors(registrationForm.username) }}</li>
                {% endif %}
            </ul>
        </div>
    {% endif %}
    <div class="form-group col-6">
        {{ form_label(registrationForm.nom) }}
        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Nom'}}) }}
    </div>
    <div class="form-group col-6">
        {{ form_label(registrationForm.prenom) }}
        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Pr√©nom'}}) }}
    </div>
    <div class="form-group col-6">
        {{ form_label(registrationForm.username) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Username'}}) }}
    </div>
    <div class="form-group col-6">
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Email'}}) }}
    </div>
    <div class="form-group col-6">
        {{ form_label(registrationForm.mdp, 'Password') }}
        {{ form_widget(registrationForm.mdp, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Verification Code'}}) }}
    </div>
    <div class="form-group col-6">
        <label for="role" class="form-label">Role</label>
        {{ form_widget(registrationForm.role, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group col-6" >
        <button type="submit" class="btn btn-primary" style="background-color: #40ba37; margin-top:20%">Register</button>
    </div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
